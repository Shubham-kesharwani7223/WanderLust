<% layout("/layouts/boilerplate") %>
<style>
    /* 2nd navbar */
    .container{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    #filters{
        display: flex;
        align-items: center;
        scroll-behavior: smooth;
        width: 45%;
        overflow: hidden;
        position: relative;
        margin-left: 2.3rem;
    }
    
    .categories{
        display: flex;
        transition: transform 0.2s ease;
    }
    
    .filter{
        text-align: center;
        white-space: nowrap;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    
    .filter p {
        font-size: 0.8rem;
    }
    
    .arrow{
        background-color: white;
        border: none;
        position: absolute;
        margin-top: 1rem;
        opacity: 0.5;
        font-size: 25px;
    }
    
    .arrow:focus{
        outline: none;
        opacity: 0.7;
    }
    
    
    .left{
        left: 0;
    }
    .right{
        margin-left: 33.5rem;
    }
    
    /* Switch button */
    .tax-info{
        display: none;
    }
    
    .tax-toggle {    
        border: 1px solid black;
        border-radius: 1.2rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 6rem;
        margin-top: 0.8rem;
        display: flex;
        align-items: center;
    }
</style>


<!--2nd Navbar -->
<nav class="navbar navbar-expand-sm bg-body-light border-bottom">
    <div class="container">
        <button type="button" class="lef arrow" onclick="slideLeft()"><i class="fa-solid fa-circle-arrow-left"></i></button>
        <div id="filters">
       <div class="categories">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </div>
      <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-key"></i>
        <p>Key</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-fire-burner"></i>
        <p>OMG!</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-globe"></i>
        <p>Top of the world</p>
      </div>
    </div>
    </div>
      <button type="button" class=" right arrow"  onclick="slideRight()"><i class="fa-solid fa-circle-arrow-right"></i></button>
    
      
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input 
          class="form-check-input" 
          type="checkbox" 
          role="switch" 
          id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
  </nav>
  

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
          <a href="/listings/<%= listing._id%>" class="listing-link">  
            <div class="card col listing-card">
               <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
               <div class="card-img-overlay"></div>
               <div class="card-body">
                 <p class="card-text">
                   <b><%= listing.title %></b> <br>
                   &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                   <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                </p>
               </div>
            </div>
        <% } %>
    </div>
  


